@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/Login_Style.css" rel="stylesheet" />
<div class="container" style="margin-top: 20px; border-radius: 4px 4px;">

    <div class="omb_login">
        <h3 class="omb_authTitle " style="font-family:monospace"><a style="color:#9f4d4d">Đăng nhập </a></h3>

        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-6">
                    <form class="omb_loginForm" action="" autocomplete="off" method="post">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input value="@ViewBag.UserName" type="text" class="form-control" name="UserName" placeholder="Tên đăng nhập" required>
                        </div>
                        <span class="help-block"></span>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                            <input value="@ViewBag.Password" type="password" class="form-control" name="Password" placeholder="Mật khẩu" required>
                        </div>
                        <span class="help-block" style="font-family:monospace">@Html.ValidationSummary(false, "", new { @class = "text-danger" })</span>
                        <button class="btn-lg btn-primary btn-block" type="submit">Đăng nhập</button>
                    </form>
                </div>

            </div>
            <div class="row omb_row-sm-offset-3">
                <div class="col-xs-12 col-sm-2">                    
                </div>

                <div class="col-xs-12 col-sm-4">
                    <p class="omb_forgotPwd">
                        <a href="/Account/Register" style="font-family:monospace">Tạo Mới Tài Khoản</a>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

