<div id="qlhsdn" class="tab-pane fade in active" style="display:block">
    <div class="about-container" style="background:none">
        <div id="wrapper">
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Danh Sách Hồ Sơ Tuyển Dụng
                            </div>
                            <div id="list" class="panel-body">
                                <table class="table table-striped table-bordered table-hover ">
                                    <thead>
                                        <tr>
                                            <th style="text-align:center">DNid</th>
                                            <th style="text-align:center">Tên Hồ sơ</th>
                                            <th style="text-align:center">Lượt lưu</th>
                                            <th style="text-align:center">Lượt nhận HS</th>
                                            <th style="text-align:center">Chi tiết</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.ThongKeHSDN != null)
                                        {
                                            foreach (DVVLBD.Models.dvvlBD.ThongKeHSTD item in ViewBag.ThongKeHSDN)
                                            {
                                                <tr>
                                                    <td style="text-align:center">@item.ID_HSTuyenDung</td>
                                                    <td>@item.TieuDeHoSo</td>

                                                    @if (@item.LuotLuu == null)
                                                    {
                                                        <td style="text-align:center">0</td>
                                                    }
                                                    else
                                                    {
                                                        <td style="text-align:center">@item.LuotLuu</td>
                                                    }
                                                    @if (@item.LuotNhan == null)
                                                    {
                                                        <td style="text-align:center">0</td>
                                                    }
                                                    else
                                                    {
                                                        <td style="text-align:center">@item.LuotNhan</td>
                                                    }
                                                    <td class="center" style="text-align:center">
                                                        <a class="btn btn-danger" style="color: #fff; background-color: #d9534f; border-color: #d43f3a;" href="/NTV/NTV_Detail/@item.ID_HSTuyenDung" target="_blank"><span class="glyphicon glyphicon-edit"></span></a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <div class="panel-footer">
                                <ul class="pager" id="pager">
                                    <li><a><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                                    <li><a><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
