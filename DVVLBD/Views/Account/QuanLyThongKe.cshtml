<input type="hidden" id="demhsdn" name="demhsdn" value="@Session["demhsdn"]" />
<input type="hidden" id="demhsntv" name="demhsntv" value="@Session["demhsntv"]" />
<script>
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demhsdn').val();

        $("#pager a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyThongKeDNSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });

        $("#pager a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyThongKeDNSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });
    });

    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demhsntv').val();

        $("#pager1 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyThongKeNTVSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
