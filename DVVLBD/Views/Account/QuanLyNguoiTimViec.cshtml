<script>
    ///////////quản lý doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demntv').val();

        $("#pager2 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyNguoiTimViecSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });

        $("#pager2 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyNguoiTimViecSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });
    });
    ///////quản lý duyệt doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demduyetntv').val();

        $("#pager3 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyDuyetNguoiTimViecSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyet").html('');
                    $("#listduyet").html(respone);
                }
            });
        });

        $("#pager3 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyDuyetNguoiTimViecSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyet").html('');
                    $("#listduyet").html(respone);
                }
            });
        });
    });
    //////////quản lý duyệt tin nhắn doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demtnntv').val();

        $("#pager4 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyDuyetTNNTVSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyettinnhan").html('');
                    $("#listduyettinnhan").html(respone);
                }
            });
        });

        $("#pager4 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyDuyetTNNTVSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyettinnhan").html('');
                    $("#listduyettinnhan").html(respone);
                }
            });
        });
    });

    function loadQuanLyHSNTV() {
        if ($("#qlhsntv").css('display') == 'none') {
            $("#qlhsntv").addClass('d-block');
            $("#qlhsntv").removeClass('d-none');
            $("#dhsntv").addClass('d-none');
            $("#dhsntv").removeClass('d-block');
            $("#tnntv").addClass('d-none');
            $("#tnntv").removeClass('d-block');
        }
        else {
            $("#dhsntv").removeClass('d-block');
            $("#dhsntv").addClass('d-none');
            $("#tnntv").removeClass('d-block');
            $("#tnntv").addClass('d-none');
        }
    };
    function loadDuyetHSNTV() {
        if ($("#dhsntv").css('display') == 'none') {
            $("#dhsntv").addClass('d-block');
            $("#dhsntv").removeClass('d-none');
            $("#qlhsntv").addClass('d-none');
            $("#qlhsntv").removeClass('d-block');
            $("#tnntv").addClass('d-none');
            $("#tnntv").removeClass('d-block');
        }
        else {
            $("#qlhsntv").removeClass('d-block');
            $("#qlhsntv").addClass('d-none');
            $("#tnntv").removeClass('d-block');
            $("#tnntv").addClass('d-none');
        }
    };
    function loadDuyetTNNTV() {
        if ($("#tnntv").css('display') == 'none') {
            $("#tnntv").addClass('d-block');
            $("#tnntv").removeClass('d-none');
            $("#qlhsntv").addClass('d-none');
            $("#qlhsntv").removeClass('d-block');
            $("#dhsntv").addClass('d-none');
            $("#dhsntv").removeClass('d-block');
        }
        else {
            $("#qlhs").removeClass('d-block');
            $("#qlhs").addClass('d-none');
            $("#dhs").removeClass('d-block');
            $("#dhs").addClass('d-none');
        }
    };
    QuanLyHSNTV = function () {
        loadQuanLyHSNTV();
    };
    DuyetHSNTV = function () {
        loadDuyetHSNTV();
    };
    DuyetTNNTV = function () {

        loadDuyetTNNTV();
    }
    var header = document.getElementById("btnh4");
    var btns = header.getElementsByClassName("btnactive");
    for (var i = 0; i < btns.length; i++) {
        btns[i].addEventListener("click", function () {
            var current = document.getElementsByClassName("thaydoimaunen");
            current[0].className = current[0].className.replace(" thaydoimaunen", "");
            this.className += " thaydoimaunen";
        });
    }

    var duyet = $('#duyet').val();

    if (duyet == "ssntv") {
        loadQuanLyHSNTV();
        $("#ssss").removeClass('thaydoimaunen');
        $("#sss").removeClass('thaydoimaunen');
        $("#ss").addClass('thaydoimaunen');
    }
    else if (duyet == "okntv") {
        loadDuyetHSNTV();
        $("#sss").addClass('thaydoimaunen');
        $("#ss").removeClass('thaydoimaunen');
        $("#ssss").removeClass('thaydoimaunen');
    }
    else if (duyet == "tnntv") {
        loadDuyetTNNTV();
        $("#ssss").addClass('thaydoimaunen');
        $("#ss").removeClass('thaydoimaunen');
        $("#sss").removeClass('thaydoimaunen');
    }
</script>
