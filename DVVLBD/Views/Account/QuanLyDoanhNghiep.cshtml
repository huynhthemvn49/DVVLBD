<script type="text/javascript">
    function btnXoaHSTD() {
        if (confirm("Bạn có thật sự muốn xóa?"))
            return true;
        else
            return false;
    }
</script>
<script>
    ///////////quản lý doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demdn').val();

        $("#pager2 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyDoanhNghiepSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });

        $("#pager2 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyDoanhNghiepSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#list").html('');
                    $("#list").html(respone);
                }
            });
        });
    });
    ///////quản lý duyệt doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demduyet').val();

        $("#pager3 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyDuyetDoanhNghiepSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyet").html('');
                    $("#listduyet").html(respone);
                }
            });
        });

        $("#pager3 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyDuyetDoanhNghiepSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyet").html('');
                    $("#listduyet").html(respone);
                }
            });
        });
    });
    //////////quản lý duyệt tin nhắn doanh nghiệp
    $(function () {
        var pageNo = 0;
        var pageSize = 5;
        var ii = $('#demtndn').val();

        $("#pager4 a:eq(0)").click(function () {
            if (pageNo > 0)
                pageNo = pageNo - 1;
            else
                pageNo = 0;
            $.ajax({
                url: "/Account/QuanLyDuyetTNDNSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyettinnhan").html('');
                    $("#listduyettinnhan").html(respone);
                }
            });
        });

        $("#pager4 a:eq(1)").click(function () {
            if (pageNo < ii)
                pageNo++;
            $.ajax({
                url: "/Account/QuanLyDuyetTNDNSkip",
                data: { pageNo: pageNo, pageSize: pageSize },
                success: function (respone) {
                    $("#listduyettinnhan").html('');
                    $("#listduyettinnhan").html(respone);
                }
            });
        });
    });

    function loadQuanLyHSDN() {
        if ($("#qlhs").css('display') == 'none') {
            $("#qlhs").addClass('d-block');
            $("#qlhs").removeClass('d-none');
            $("#dhs").addClass('d-none');
            $("#dhs").removeClass('d-block');
            $("#tndn").addClass('d-none');
            $("#tndn").removeClass('d-block');
        }
        else {
            $("#dhs").removeClass('d-block');
            $("#dhs").addClass('d-none');
            $("#tndn").removeClass('d-block');
            $("#tndn").addClass('d-none');
        }
    };
    function loadDuyetHSDN() {
        if ($("#dhs").css('display') == 'none') {
            $("#dhs").addClass('d-block');
            $("#dhs").removeClass('d-none');
            $("#qlhs").addClass('d-none');
            $("#qlhs").removeClass('d-block');
            $("#tndn").addClass('d-none');
            $("#tndn").removeClass('d-block');
        }
        else {
            $("#qlhs").removeClass('d-block');
            $("#qlhs").addClass('d-none');
            $("#tndn").removeClass('d-block');
            $("#tndn").addClass('d-none');
        }
    };
    function loadDuyetTNDN() {
        if ($("#tndn").css('display') == 'none') {
            $("#tndn").addClass('d-block');
            $("#tndn").removeClass('d-none');
            $("#qlhs").addClass('d-none');
            $("#qlhs").removeClass('d-block');
            $("#dhs").addClass('d-none');
            $("#dhs").removeClass('d-block');
        }
        else {
            $("#qlhs").removeClass('d-block');
            $("#qlhs").addClass('d-none');
            $("#dhs").removeClass('d-block');
            $("#dhs").addClass('d-none');
        }
    };
    QuanLyHSDN = function () {
        loadQuanLyHSDN();
    };
    DuyetHSDN = function () {
        loadDuyetHSDN();
    };
    DuyetTNDN = function () {

        loadDuyetTNDN();
    }
    var header = document.getElementById("btnh4");
    var btns = header.getElementsByClassName("btnactive");
    for (var i = 0; i < btns.length; i++) {
        btns[i].addEventListener("click", function () {
            var current = document.getElementsByClassName("thaydoimaunen");
            current[0].className = current[0].className.replace(" thaydoimaunen", "");
            this.className += " thaydoimaunen";
        });
    }

    var duyet = $('#duyet').val();

    if (duyet == "ss") {
        loadQuanLyHSDN();
        $("#ssss").removeClass('thaydoimaunen');
        $("#sss").removeClass('thaydoimaunen');
        $("#ss").addClass('thaydoimaunen');
    }
    else if (duyet == "ok") {
        loadDuyetHSDN();
        $("#sss").addClass('thaydoimaunen');
        $("#ss").removeClass('thaydoimaunen');
        $("#ssss").removeClass('thaydoimaunen');
    }
    else if (duyet == "tn") {
        loadDuyetTNDN();
        $("#ssss").addClass('thaydoimaunen');
        $("#ss").removeClass('thaydoimaunen');
        $("#sss").removeClass('thaydoimaunen');
    }
</script>
