<div class="row">
    <div class="col-lg-6">
    </div>
    <div class="col-lg-3">
        <a href="/Account/DuyetTatCaDN" class="btn btn-info pull-right" style="background: #31b0d5; color: white">
            <span class="fa fa-check-circle"></span>&nbsp;Duyệt Tất Cả
        </a>
    </div>
    <div class="col-lg-3">
        <a href="/Account/HuyDuyetTatCaDN" class="btn btn-success pull-right" style="background: #eea236; color: white">
            <span class="fa fa-remove"></span>&nbsp;Hủy Duyệt Tất Cả
        </a>
    </div>
</div>
<table class="table table-striped table-bordered table-hover ">
    <thead>
        <tr>
            <th>DNid</th>
            <th>Tên doanh nghiệp</th>
            <th>Tên Hồ sơ</th>
            <th>Lượt xem</th>
            <th>Check/Hủy</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.DuyetHoSo != null)
        {
            foreach (DVVLBD.Models.dvvlBD.DoanhNghiep_HS item in ViewBag.DuyetHoSo)
            {
                <tr>
                    <td>@item.ID_HSTuyenDung</td>
                    <td>@item.DoanhNghiep.TenDoanhNghiep</td>
                    <td>@item.TieuDeHoSo</td>
                    <td>@item.SoLuotXem</td>
                    <td class="center">
                        <a class="btn btn-danger" style="color: #fff; background-color: #d9534f; border-color: #d43f3a;" href="/Account/DuyetHoSo/@item.ID_HSTuyenDung"><span class="glyphicon glyphicon-check"></span></a>
                        <a class="btn btn-warning" onclick="return btnXoaHSTD()" style="color: #fff; background-color: #f0ad4e; border-color: #eea236;" @*href="/Account/XoaHSTD/@item.ID_HSTuyenDung"*@><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>