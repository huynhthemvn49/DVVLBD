<table class="table table-striped table-bordered table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nội dung tin nhắn</th>
            <th>Tên người tìm việc nhận</th>
            <th>Ngày gửi</th>
            <th>Xóa</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.DuyetTinNhanNTV != null)
        {
            foreach (DVVLBD.Models.dvvlBD.GuiHSChoNTV item in ViewBag.DuyetTinNhanNTV)
            {
                <tr>
                    <td>@item.ID_GuiHSChoNTV</td>
                    <td>@item.TinNhanDN</td>
                    <td>@item.NguoiTimViec.HoTen</td>
                    <td>@Html.FormatValue(item.NgayTao, "{0:dd/MM/yyyy}")</td>
                    <td class="center">
                        @*<a class="btn btn-danger btnduyet" style="color: #fff; background-color: #d9534f; border-color: #d43f3a;" href="/Account/DuyetTinNhanNTV/@item.ID_GuiHSChoNTV"><span class="glyphicon glyphicon-check"></span></a>*@
                        <a class="btn btn-warning" onclick="return btnHuyDuyetTNNTV()" style="color: #fff; background-color: #f0ad4e; border-color: #eea236;" href="/Account/HuyDuyetTinNhanNTV/@item.ID_GuiHSChoNTV"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>