<table class="table table-striped table-bordered table-hover ">
    <thead>
        <tr>
            <th style="text-align:center">NTVid</th>
            <th style="text-align:center">Tên Hồ sơ</th>
            <th style="text-align:center">Lượt lưu</th>
            <th style="text-align:center">Lượt nhận HS</th>
            <th style="text-align:center">Chi tiết</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.ThongKeHSNTV != null)
        {

            foreach (DVVLBD.Models.dvvlBD.ThongKeHSNTV item in ViewBag.ThongKeHSNTV)
            {
                <tr>
                    <td style="text-align:center">@item.ID_HSXinViec</td>
                    <td>@item.TenHSXinViec</td>

                    @if (@item.LuotLuu == null)
                    {
                        <td style="text-align:center">0</td>
                    }
                    else
                    {
                        <td style="text-align:center">@item.LuotLuu</td>
                    }
                    @if (@item.LuotNhan == null)
                    {
                        <td style="text-align:center">0</td>
                    }
                    else
                    {
                        <td style="text-align:center">@item.LuotNhan</td>
                    }
                    <td class="center" style="text-align:center">
                        <a class="btn btn-danger" style="color: #fff; background-color: #d9534f; border-color: #d43f3a;" href="/NTV/NTV_Detail/@item.ID_HSXinViec" target="_blank"><span class="glyphicon glyphicon-edit"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>

</table>